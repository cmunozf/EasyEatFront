@model EasyEat.Models.RestauranteModel
@{
    ViewBag.Title = ViewData["Action"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>@ViewData["Action"]</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Restaurante", "Index")
            </li>
            <li class="active">
                <strong>@ViewData["Action"]</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-primary" href="/Restaurante"><i class="fa fa-chevron-left"></i> Regresar</a> 
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewData["Action"]</h5>
                </div>
                <div class="ibox-content">
				@using (Html.BeginForm("Edit", "Restaurante", FormMethod.Post, new { id = "MaintenanceForm" }))
				{
					@Html.AntiForgeryToken()
				 <div class="form-horizontal">
					@Html.ValidationSummary(true)

					   @Html.HiddenFor(model => model.RestauranteId)
      <div id="valtipoDocumento"  class="form-group">
           @Html.LabelFor(model => model.tipoDocumento, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="tipoDocumento" name ="tipoDocumento" class="form-control" placeholder ="tipoDocumento" value ="@Model.tipoDocumento" required ="" >
             @Html.ValidationMessageFor(model => model.tipoDocumento)
           </div>
     </div>
      <div id="valnumeroDocumento" class="form-group">
           @Html.LabelFor(model => model.numeroDocumento, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="numeroDocumento" name ="numeroDocumento" class="form-control" placeholder ="numeroDocumento" value ="@Model.numeroDocumento" required ="" >
             @Html.ValidationMessageFor(model => model.numeroDocumento)
           </div>
     </div>
      <div id="valnombre" class="form-group">
           @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="nombre" name ="nombre" class="form-control" placeholder ="nombre" value ="@Model.nombre" required ="" >
             @Html.ValidationMessageFor(model => model.nombre)
           </div>
     </div>
      <div id="valtipoRestaurante" class="form-group">
           @Html.LabelFor(model => model.tipoRestaurante, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="tipoRestaurante" name ="tipoRestaurante" class="form-control" placeholder ="tipoRestaurante" value ="@Model.tipoRestaurante" required ="" >
             @Html.ValidationMessageFor(model => model.tipoRestaurante)
           </div>
     </div>
      <div id="valdescripcion" class="form-group">
           @Html.LabelFor(model => model.descripcion, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="descripcion" name ="descripcion" class="form-control" placeholder ="descripcion" value ="@Model.descripcion" required ="" >
             @Html.ValidationMessageFor(model => model.descripcion)
           </div>
     </div>
      <div id="valtelefono" class="form-group">
           @Html.LabelFor(model => model.telefono, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="telefono" name ="telefono" class="form-control" placeholder ="telefono" value ="@Model.telefono" required ="" >
             @Html.ValidationMessageFor(model => model.telefono)
           </div>
     </div>
      <div id="valdireccion" class="form-group">
           @Html.LabelFor(model => model.direccion, new { @class = "control-label col-md-2" })
           <div class="col-md-10">
            <input type="text" id ="direccion" name ="direccion" class="form-control" placeholder ="direccion" value ="@Model.direccion" required ="" >
             @Html.ValidationMessageFor(model => model.direccion)
           </div>
     </div>

					<div class="form-group">
					   <div class="col-md-offset-2 col-md-10">
						<button class="btn btn-primary btn-sm" id="btnSend" name="btnSend" type="button"><i class="fa fa-save"></i> @ViewData["Btn"]</button>
						<a class="btn btn-white btn-sm" href="/Restaurante"><i class="fa fa-exclamation-circle"></i> Cancelar</a>

					   </div>
					</div>
				  </div>
				}

		       </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {

		toastr.options = {
            "closeButton": false,
            "debug": true,
            "positionClass": "toast-bottom-full-width",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

		/// validate form
        $("#btnSend").click(function () {

            var message = "";

			/// Clear all error marks
                $("#valtipoDocumento").attr('class', 'form-group');
                $("#valnumeroDocumento").attr('class', 'form-group');
                $("#valnombre").attr('class', 'form-group');
                $("#valtipoRestaurante").attr('class', 'form-group');
                $("#valdescripcion").attr('class', 'form-group');
                $("#valtelefono").attr('class', 'form-group');
                $("#valdireccion").attr('class', 'form-group');
            
			/// Validate every control in the ui

            if ($("#tipoDocumento").val() == "" || ($("#tipoDocumento").val() == "0")){ 
                message = "s"
                $("#valtipoDocumento").attr('class', 'form-group has-error')
             }
            if ($("#numeroDocumento").val() == "" || ($("#numeroDocumento").val() == "0")) {
                message = "s"
                $("#valnumeroDocumento").attr('class', 'form-group has-error')
             }
            if ($("#nombre").val() == "" || ($("#nombre").val() == "0")) {
                message = "s"
                $("#valnombre").attr('class', 'form-group has-error')
             }
            if ($("#tipoRestaurante").val() == "" || ($("#tipoRestaurante").val() == "0")) {
                message = "s"
                $("#valtipoRestaurante").attr('class', 'form-group has-error')
             }
            if ($("#descripcion").val() == "" || ($("#descripcion").val() == "0")) {
                message = "s"
                $("#valdescripcion").attr('class', 'form-group has-error')
             }
            if ($("#telefono").val() == "" || ($("#telefono").val() == "0")) {
                message = "s"
                $("#valtelefono").attr('class', 'form-group has-error')
             }
            if ($("#direccion").val() == "" || ($("#direccion").val() == "0")) {
                message = "s"
                $("#valdireccion").attr('class', 'form-group has-error')
             }

            if (message == "") {
                document.forms['MaintenanceForm'].submit()
            }
            else {
                toastr.error('Faltan datos por completar');
            }
        });
    });

</script>

    @Scripts.Render("~/bundles/jqueryval")
}

