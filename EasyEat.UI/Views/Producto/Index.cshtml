@model EasyEat.Models.ProductoModel
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/plugins/dataTables/datatables.min.css" rel="stylesheet">
<link href="~/Content/plugins/sweetalert/sweetalert.css" rel="stylesheet">
@{ List<EasyEat.Models.ProductoModel> list = (List<EasyEat.Models.ProductoModel>)ViewData["DataProducto"]; }
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Navegando a</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>

</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Producto</h5>
                    <div class="ibox-tools">
                        <div class="ibox-tools">
                           
                            <a class="btn btn-primary btn-xs" href="/Producto/Create"><i class="fa fa-plus-square"></i> Nuevo Producto</a>

                        </div>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">



                            <thead>
                                <tr>
                                    <th></th>
                                    <th>ProductoId</th> 
                        <th>nombre</th>
                        <th>precio</th>
                        <th>categoria</th>
                        <th>restaurante</th>
                                </tr>
                            </thead>




                            <tbody>

                                @foreach (var item in list)
                                {
                                    <tr class="gradeU">
                                        <td>
                                         
                                            <button class="btn btn-primary btn-sm" id="btnDelete" name="btnDelete" onclick="ConfirmDelete(@item.ProductoId)" type="button"><i class="fa fa-exclamation-circle"></i> Borrar</button>
                                          

                                        </td>
                                        <td>@item.ProductoId</td>
                        <td>@item.nombre</td>
                        <td>@item.precio</td>
                        <td>@item.categoria</td>
                        <td>@item.restaurante</td>
                                      
                                        
                                       
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th></th>
                                    <th>ProductoId</th> 
                        <th>nombre</th>
                        <th>precio</th>
                        <th>categoria</th>
                        <th>restaurante</th>
                                    
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {


    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/metsiMenu")


    <script src="js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="~/Scripts/plugins/sweetalert/sweetalert.min.js"></script>

    <script type="text/javascript">
        $('.dataTables-example').DataTable({
            "pageLength": 25,
            "responsive": true,
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json"
            },
            "dom": '<"html5buttons"B>lTfgitp',
            "buttons": [
                       { extend: 'copy' },
                       { extend: 'excel', title: 'ReportProducto' }
            ]



        });

        function ConfirmDelete(id) {
            debugger
            var iddelete = id;
            swal({
                title: "Esta Seguro?",
                text: "Esta usted seguro de borrar?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Si, Eliminar!",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    url: '/Producto/Delete',
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify({
                        id: id,
                    }),
                    success: function (json) {
                        location.reload();
                        //swal("Eliminado!", "Producto Eliminado", "success");
                    },

                    error: function (xhr, status, error) {
                        alert("Error al cargar");
                    }
                });
               
            });
        }

    </script>
}

