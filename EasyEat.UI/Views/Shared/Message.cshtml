
@if (ViewData["Message"] != null)
{
    var data = ((EasyEat.UI.Code.LocalMessage)ViewData["Message"]).Message;
    if (((EasyEat.UI.Code.LocalMessage)ViewData["Message"]).Type == EasyEat.UI.Code.MessageType.Error)
    {
    <script>
        toastr.options = {
            "closeButton": false,
            "debug": true,
            //"positionClass": "toast-bottom-full-width",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "2000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    
        toastr.error('@data');
        
        
    </script>    
        
    }
    if (((EasyEat.UI.Code.LocalMessage)ViewData["Message"]).Type == EasyEat.UI.Code.MessageType.Information)
    {
    <script>
        toastr.options = {
            "closeButton": false,
            "debug": true,
         
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "2000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    
        toastr.info('@data');
        
        
    </script>    
        
    }
    if (((EasyEat.UI.Code.LocalMessage)ViewData["Message"]).Type == EasyEat.UI.Code.MessageType.Warning)
    {
    <script>
        toastr.options = {
            "closeButton": false,
            "debug": true,
            //"positionClass": "toast-bottom-full-width",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "2000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
    
        toastr.warning('@data');
        
        
    </script>    
        
    }
}